{
  "name": "api-message",
  "version": "1.0.3",
  "description": "Client to send messages using typescript",
  "repository": "git@github.com:julianostroschon/api-typescript-messages.git",
  "author": "Juliano Stroschon <julianostroschon@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "node dist/",
    "format": "prettier -w .",
    "dev": "DOTENV_CONFIG_QUIET=true tsx --tsconfig tsconfig.json --watch src/index.ts",
    "test": "DOTENV_CONFIG_QUIET=true NODE_ENV=test jest --detectOpenHandles --forceExit --watch",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "test:changed": "CI=true DOTENV_CONFIG_QUIET=true jest --passWithNoTests --runInBand --ci --findRelatedTests",
    "lint": "eslint ./src/** .ts",
    "producer": "DOTENV_CONFIG_QUIET=true tsx --tsconfig tsconfig.json --watch src/producer",
    "consumer": "DOTENV_CONFIG_QUIET=true tsx --tsconfig tsconfig.json --watch src/consumer",
    "pre-commit": "husky install",
    "postinstall": "husky ./",
    "lint:fix": "eslint ./src --fix"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^18.19.123",
    "@types/node-telegram-bot-api": "^0.64.10",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "9.33.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^3.15.0",
    "tsx": "^4.20.4",
    "typescript": "^5.0.4",
    "typescript-eslint": "^7.9.0",
    "typescript-transform-paths": "^3.5.5"
  },
  "_moduleAliases": {
    "@src": "dist"
  },
  "dependencies": {
    "amqplib": "^0.10.8",
    "dotenv": "^17.2.1",
    "fastify": "5.5.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "node-telegram-bot-api": "^0.66.0",
    "winston": "^3.17.0",
    "zod": "^4.0.15"
  }
}
